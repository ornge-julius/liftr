<div class="container">
  <div class="row">
    <div class="col-sm-2" style="margin-top: 10px; margin-bottom: 10px"><button type="button" class="btn btn-outline-primary">New <i class="fas fa-plus"></i></button>
    </div> 
    <div class="col-sm-2" style="margin-top: 10px; margin-bottom: 10px">
      <% form_for :lift, url(:lifts, :destroy, :id => @lift.id) do |f| %>
        <%= f.submit "Delete", :class => 'btn btn-primary' , :name => 'delete_lift'%>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @entries.each do |entry| %>
      <div class='col-12 col-sm-4' style="margin-top: 10px">
        <div class="card rounded-sm">
          <div class="card-body">
            <h3><%= entry.weight %> lbs</h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>