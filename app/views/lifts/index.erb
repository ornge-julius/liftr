<div class="container">
  <div class="row">
    <div class="col-sm" style="margin-top: 10px; margin-bottom: 10px">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">New <i class="fas fa-plus"></i></button>
    </div>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Lift</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% form_for :lifts, url(:lifts, :create) do |f| %>
          <div class="modal-body">
              <div class="form-group">
                <label for="lift-name" class="col-form-label">Name:</label>
                <%= f.text_field :name, :class => 'form-control' %>
              </div>
          </div>
          <div class="modal-footer">
            <div class="form-actions">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <%= f.submit :class => 'btn btn-primary' , :name => 'create_lift'%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <% @lifts.each do |lift| %>
      <div class='col-6 col-sm-4' style="margin-top: 10px">
        <div class="card rounded-sm">
          <div class="card-body">
            <h3><%= link_to lift.name, url(:lifts, :index, :id => lift.id) %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>